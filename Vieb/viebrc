set permissionfullscreen=allow
set permissiongeolocation=ask
set permissionhid=block
set permissionmediadevices=block
set permissionmicrophone=ask
set permissionnotifications=block
set permissionopenexternal=ask
set permissionsallowed=https://localhost(|\/.*|:.*)~certificateerror
set permissionsensors=block
set permissionserial=block
set permissionscreenwakelock=block
set permissionunknown=block
set permissionusb=block
set permissionwindowmanagement=block
set quitonlasttabclose=false
set redirecttohttp=false
set reloadtaboncrash=false
set resourcetypes=["object","media","image","stylesheet","font","xhr","ping","websocket"]
set resourcesallowed={".*duckduckgo.com.*": "script", ".*github.com.*": "script", ".*stackoverflow.com.*": "script", ".*reddit.com.*": "script", ".*youtube.com.*": "script", ".*youtube-nocookie.com.*": "script", ".*google.com.*": "script", ".*gmail.com.*": "script", ".*amazon.com.*": "script", ".*etsy.com.*": "script", ".*ebay.com.*": "script", ".*paypal.com.*": "script"}
set replacestartup=newtab
set restoretabs=all
set searchengine=["https://duckduckgo.com/?kae=g&kp=-2&kav=1&kk=-1&kaj=u&kay=b&kak=-1&kax=-1&kaq=-1&kap=-1&kao=-1&kt=n&kw=n&k7=1E1E21&ka=n&kj=262629&q=%s&ia=web"]
set searchwords=
set searchwords+=translate~https://translate.google.com/?sl=auto&tl=en&text=%s
set searchwords+=duckduckgo~https://duckduckgo.com/?q=%s
set searchwords+=google~https://www.google.com/search?hl=en&q=%s
set searchwords+=youtube~https://www.youtube.com/results?search_query=%s
set searchwords+=wikipedia~https://en.wikipedia.org/?search=%s
set searchwords+=stackoverflow~https://stackoverflow.com/search?q=%s
set searchwords+=github~https://github.com/search?q=%s
set showcmd=false
set smartcase=true
set spell=true
set spelllang=["en-US"]
set splitbelow=true
set splitright=true
set sponsorblock=false
set suggestorder=[["searchword", "5~alpha"], ["history", "relevance~5"], ["file", "5"]]
set suggesttopsites=0
set suspendbackgroundtab=true
set tabclosefocus=previous
set tabreopenposition=previous
set tabcycle=false
set tabnewposition=right
