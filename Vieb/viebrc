" Options
colorscheme custom
set adblocker=static
set cache=clearonquit
set clearcookiesonquit=false
set cleardownloadsoncompleted=false
set cleardownloadsonquit=false
set clearhistoryinterval=none
set clearlocalstorageonquit=false
set closablepinnedtabs=false
set countlimit=100
set darkreader=true
set darkreadermode=dark
set darkreadersepia=0
set darkreadergrayscale=0
set darkreadertextstroke=0
set darkreaderbg=#1E1E21
set darkreaderfg=#DDDACB
set darkreaderblocklist=["github", "google", "youtube"]
set darkreaderbrightness=100
set darkreadercontrast=100
set devtoolsposition=split
set dialogalert=notifyblock
set dialogconfirm=notifyblock
set dialogprompt=notifyblock
set downloadmethod=confirm
set explorehist=persist
set externalcommand=xdg-open
set favicons=session
set followchars=alpha
set followfallbackaction=nothing
set followlabelposition=outsidelefttop
set follownewtabswitch=false
set guifontsize=14
set guifullscreennavbar=always
set guifullscreentabbar=never
set guinavbar=always
set guiscrollbar=always
set guitabbar=never
set historyperpage=100
set ignorecase=true
set inputfocusalignment=rememberend
set keeprecentlyclosed=true
set loadingindicator=line
set mapsuggestposition=bottomright
set mouse=
set mousenewtabswitch=true
set passthroughkeys={"youtube.com": "<Right><Left><Space><NL>"}
set pdfbehavior=download
set permissioncamera=block
set permissionpersistentstorage=allow
set permissionclipboardread=block
set permissionclipboardwrite=allow
set permissionclosepage=allow
