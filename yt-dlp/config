# make all connections via IPv4
--force-ipv4

# bypass geographic restriction by faking X-Forwarded-For HTTP header
--geo-bypass

# prefer free containers over non-free ones
--prefer-free-formats
--format-sort ext

# use cookies from Firefox instead of defining everything via insecure 'netrc'
--cookies-from-browser firefox:qqvvizi0.default-release

# download YouTube livestreams from start
--live-from-start

# download playlist in default order
--no-playlist-reverse

# do not write thumbnail image to disk
--no-write-thumbnail

# restrict filenames to only ASCII characters
--restrict-filenames

# catchall preferred formats with safe fallbacks (use -f for edge cases)
--format "bv[height=1080][vcodec=webm]+ba[acodec=opus]/bv[height=720][vcodec=webm]+ba[acodec=opus]/bv[height=1080]+ba[acodec=opus]/bv[height=1080]+ba/bv[height=1440][vcodec=webm]+ba[acodec=opus]/bv[height=720]+ba[acodec=opus]/bv[height=720]+ba/bv[height<=1080][vcodec=webm]+ba[acodec=opus]/bv[height<=1080]+ba[acodec=opus]/bv[height<=1080]+ba/bv+ba[acodec=opus]/best"
