# make all connections via IPv4
--force-ipv4

# bypass geographic restriction by faking X-Forwarded-For HTTP header
--geo-bypass

# stictly prefer free containers over non-free ones
--prefer-free-formats
--format-sort ext

# use cookies from Firefox instead of defining everything via insecure 'netrc'
--cookies-from-browser firefox:qqvvizi0.default-release

# download YouTube livestreams from start
--live-from-start

# download playlist in default order
--no-playlist-reverse

# do not write thumbnail image to disk
--no-write-thumbnail

# restrict filenames to only ASCII characters
--restrict-filenames

# preferred formats with safe fallbacks
# --format "bv[height>=720]+ba[acodec=opus]/bv[height>=720]+ba[ext=webm]/bv[height>=720]+ba/best"
--format "bv[height<=720]+ba[acodec=opus]/bv[height<=720]+ba[ext=webm]/bv[height<=720]+ba/best"
